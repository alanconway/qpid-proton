"""
Script to control a qpidd external broker, used as part of a proton test.
"""
import os.path, sys, subprocess

qpidd_exe = "@QPIDD_EXE@"
qpid_config_exe = "@QPID_CONFIG_EXE@"

devnull = open(os.devnull, "w")

def create(directory, port):
    os.makedirs(directory)

def start(directory, port):
    return subprocess.call([qpidd_exe, '-dp', port, '--auth=no', '--data-dir', directory,
                            '--log-to-file', os.path.join(directory, "qpidd.log")])

def stop(directory, port):
    return subprocess.call([qpidd_exe, '-qp', port, '--data-dir', directory])

def alive(directory, port):
    return subprocess.call([qpidd_exe, '-cp', port, '--data-dir', directory],
                           stdout=devnull, stderr=subprocess.STDOUT)

def make_queue(directory, port, q):
    return subprocess.call([qpid_config_exe, '-b', '127.0.0.1:%s'%port, 'add', 'queue', q])

if __name__ == "__main__":
    sys.exit(globals()[sys.argv[1]](*sys.argv[2:]))
